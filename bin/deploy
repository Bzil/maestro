#!/bin/bash
########################################
###########  USER VARIABLES ############
########################################
TOMCAT_MAESTRO="tomcat_maestro"
TOMCAT_COMMON="tomcat_common"
APPS_ROOT="/apps"
MAESTRO="maestro"



########################################
##########  SCRIPT VARIABLES ###########
########################################
MAESTRO_TARGET=`echo $MAESTRO"/target/deploy"`
TOMCAT_MAESTRO_APPS=`echo "/opt/"$TOMCAT_MAESTRO$APPS_ROOT`
NORMAL="\\033[0;39m"
RED="\\033[1;31m"
BLUE="\\033[1;34m"
GREEN="\\033[1;32m"
YELLOW="\\033[1;33m"

INFO=`echo "["$BLUE "INFO" $NORMAL"]"`

########################################
##############  SCRIPTS ################
########################################
CURRENT=0
MAX=4
function phase { 
    echo "PHASE" $YELLOW$CURRENT$NORMAL"/"$YELLOW$MAX$NORMAL
}

CURRENT=$(($CURRENT+1))
echo -e $INFO `phase`
./stop

CURRENT=$(($CURRENT+1))
echo -e $INFO `phase`
./clean

CURRENT=$(($CURRENT+1))
echo -e $INFO `phase`
./copy

CURRENT=$(($CURRENT+1))
echo -e $INFO `phase`
./start


